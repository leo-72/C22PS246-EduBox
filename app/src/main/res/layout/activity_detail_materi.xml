<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.DetailMateriActivity">


    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/ungu"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selamat_datang_di_pembelajaran"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_bold" />

                    <TextView
                        android:id="@+id/rvMateri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/literasi_viii_teks_persuasif"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/inter_extrabold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Pembahasan"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="50dp"
                    android:hint="MATERI"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/black" />


            </RelativeLayout>


        </LinearLayout>
    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>