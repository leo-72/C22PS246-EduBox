<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtWelcome"
        style="@style/fontWelcome"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="120dp"
        android:text="@string/textWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.bangkit.edubox.customView.EditTextPassword
        android:id="@+id/inpPassword"
        style="@style/editText"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/inpUsername"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/inpUsername"
        app:layout_constraintTop_toBottomOf="@+id/inpUsername"
        app:passwordToggleEnabled="true" />

    <TextView
        android:id="@+id/txt_sign_up"
        style="@style/normalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/txtNoAcc"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/component_or"
        app:layout_constraintStart_toStartOf="@+id/component_or"
        app:layout_constraintTop_toBottomOf="@+id/component_or" />

    <com.bangkit.edubox.customView.BtnSignIn
        android:id="@+id/btnSignIn"
        style="@style/btnCustom"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:text="@string/txtSignIn"
        app:layout_constraintEnd_toEndOf="@+id/inpPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/inpPassword"
        app:layout_constraintTop_toBottomOf="@+id/inpPassword" />

    <com.bangkit.edubox.customView.EditTextUsername
        android:id="@+id/inpUsername"
        style="@style/editText"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txtWelcome"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtWelcome"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcome" />

    <LinearLayout
        android:id="@+id/component_or"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="@+id/btnSignIn"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/btnSignIn"
        app:layout_constraintTop_toBottomOf="@+id/btnSignIn">

        <View
            android:layout_width="120dp"
            android:layout_height="0.8dp"
            android:layout_gravity="center"
            android:background="@color/white" />

        <TextView
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/txt_Or"/>

        <View
            android:layout_width="120dp"
            android:layout_height="0.8dp"
            android:layout_gravity="center"
            android:background="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>